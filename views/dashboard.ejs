<%- include('partials/header', { title: 'Dashboard', showHero: false, showPageHeader: false }) %>

<div class="container-fluid py-4">
    <div class="container">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="h3 mb-1">Welcome back, <%= user.name.split(' ')[0] %>!</h1>
                                <p class="text-muted mb-0">Here's what's happening with your portfolio today.</p>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="/portfolio" class="btn btn-outline-primary">
                                    <i class="fas fa-chart-pie me-2"></i>View Portfolio
                                </a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Portfolio Overview Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Portfolio Overview</h5>
                        <a href="/portfolio" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-chart-pie me-1"></i> View Details
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (typeof portfolio !== 'undefined') { %>
                            <div class="row">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div class="card h-100 border-0 bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted mb-2">Total Value</h6>
                                            <h3 class="mb-0">$<%= (portfolio.totalValue || 0).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></h3>
                                            <div class="mt-2">
                                                <span class="<%= (portfolio.dayChange || 0) >= 0 ? 'text-success' : 'text-danger' %>">
                                                    <i class="fas fa-<%= (portfolio.dayChange || 0) >= 0 ? 'arrow-up' : 'arrow-down' %> me-1"></i>
                                                    $<%= Math.abs(portfolio.dayChange || 0).toFixed(2) %> 
                                                    (<%= (portfolio.dayChangePercent || 0).toFixed(2) %>%)
                                                </span>
                                                <small class="text-muted d-block">Today's Change</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div class="card h-100 border-0 bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted mb-2">Total Gain/Loss</h6>
                                            <h3 class="<%= (portfolio.totalGain || 0) >= 0 ? 'text-success' : 'text-danger' %> mb-0">
                                                $<%= Math.abs(portfolio.totalGain || 0).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                            </h3>
                                            <div class="mt-2">
                                                <span class="<%= (portfolio.totalGainPercent || 0) >= 0 ? 'text-success' : 'text-danger' %>">
                                                    <%= (portfolio.totalGainPercent || 0).toFixed(2) %>%
                                                </span>
                                                <small class="text-muted d-block">Total Return</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card h-100 border-0 bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted mb-2">Top Holding</h6>
                                            <% if (portfolio.topHolding) { %>
                                                <h5 class="mb-1"><%= portfolio.topHolding.symbol %></h5>
                                                <p class="text-muted mb-1"><%= portfolio.topHolding.name %></p>
                                                <div class="<%= portfolio.topHolding.changePercent >= 0 ? 'text-success' : 'text-danger' %>">
                                                    $<%= (portfolio.topHolding.price || 0).toFixed(2) %>
                                                    <small>(<%= portfolio.topHolding.changePercent >= 0 ? '+' : '' %><%= (portfolio.topHolding.changePercent || 0).toFixed(2) %>%)</small>
                                                </div>
                                            <% } else { %>
                                                <p class="text-muted mb-0">No holdings yet</p>
                                                <a href="/stocks" class="btn btn-sm btn-primary mt-2">
                                                    <i class="fas fa-plus me-1"></i> Add Stocks
                                                </a>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                                <h5>No Portfolio Data</h5>
                                <p class="text-muted mb-3">Start by adding stocks to your portfolio</p>
                                <a href="/stocks" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i> Browse Stocks
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Watchlists Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">My Watchlists</h5>
                        <a href="/dashboard/watchlist" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-list me-1"></i> Manage All
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (watchlists && watchlists.length > 0) { %>
                            <div class="row">
                                <% watchlists.slice(0, 3).forEach(watchlist => { %>
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">
                                                    <a href="/dashboard/watchlist" class="text-decoration-none">
                                                        <%= watchlist.name %>
                                                    </a>
                                                </h6>
                                                <span class="badge bg-primary"><%= watchlist.stocks ? watchlist.stocks.length : 0 %></span>
                                            </div>
                                            <div class="card-body p-0">
                                                <% if (watchlist.stocks && watchlist.stocks.length > 0) { %>
                                                    <div class="list-group list-group-flush">
                                                        <% watchlist.stocks.slice(0, 3).forEach(stock => { %>
                                                            <a href="/stock/<%= stock.symbol %>" class="list-group-item list-group-item-action">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <strong><%= stock.symbol %></strong>
                                                                        <div class="text-muted small"><%= stock.name %></div>
                                                                    </div>
                                                                    <div class="text-end">
                                                                        <div>$<%= parseFloat(stock.current_price).toFixed(2) %></div>
                                                                        <small class="<%= stock.change_percent >= 0 ? 'text-success' : 'text-danger' %>">
                                                                            <%= stock.change_percent >= 0 ? '+' : '' %><%= parseFloat(stock.change_percent).toFixed(2) %>%
                                                                        </small>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        <% }); %>
                                                    </div>
                                                    <% if (watchlist.stocks.length > 3) { %>
                                                        <div class="text-center py-2 border-top">
                                                            <a href="/dashboard/watchlist" class="text-decoration-none small">
                                                                View all <%= watchlist.stocks.length %> stocks <i class="fas fa-arrow-right"></i>
                                                            </a>
                                                        </div>
                                                    <% } %>
                                                <% } else { %>
                                                    <div class="text-center p-4">
                                                        <p class="text-muted mb-3">No stocks in this watchlist yet</p>
                                                        <a href="/stocks" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-plus me-1"></i> Add Stocks
                                                        </a>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-list-ul fa-3x text-muted mb-3"></i>
                                <h5>No watchlists yet</h5>
                                <p class="text-muted mb-3">Create your first watchlist to track your favorite stocks</p>
                                <a href="/dashboard/watchlist/new" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i> Create Watchlist
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Market Overview -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Market Overview</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Price</th>
                                        <th>Change</th>
                                        <th>% Change</th>
                                        <th>Market Cap</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (marketOverview && marketOverview.length > 0) { %>
                                        <% marketOverview.forEach(stock => { %>
                                            <tr>
                                                <td>
                                                    <a href="/stock/<%= stock.symbol %>" class="text-decoration-none">
                                                        <strong><%= stock.symbol %></strong>
                                                    </a>
                                                </td>
                                                <td>$<%= parseFloat(stock.current_price).toFixed(2) %></td>
                                                <td class="<%= stock.change_percent >= 0 ? 'text-success' : 'text-danger' %>">
                                                    <%= stock.change_percent >= 0 ? '+' : '' %><%= parseFloat(stock.change_value).toFixed(2) %>
                                                </td>
                                                <td class="<%= stock.change_percent >= 0 ? 'text-success' : 'text-danger' %>">
                                                    <%= stock.change_percent >= 0 ? '+' : '' %><%= parseFloat(stock.change_percent).toFixed(2) %>%
                                                </td>
                                                <td>$<%= (stock.market_cap / 1000000000).toFixed(2) %>B</td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4">No market data available</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Gainers & Losers -->
        <div class="row">
            <!-- Top Gainers -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Top Gainers</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <% if (topGainers && topGainers.length > 0) { %>
                                <% topGainers.forEach(stock => { %>
                                    <a href="/stock/<%= stock.symbol %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong><%= stock.symbol %></strong>
                                                <div class="text-muted small"><%= stock.name %></div>
                                            </div>
                                            <div class="text-end">
                                                <div>$<%= parseFloat(stock.current_price).toFixed(2) %></div>
                                                <span class="text-success">
                                                    +<%= parseFloat(stock.change_percent).toFixed(2) %>%
                                                </span>
                                            </div>
                                        </div>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center p-4 text-muted">
                                    No gainers data available
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Losers -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">Top Losers</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <% if (topLosers && topLosers.length > 0) { %>
                                <% topLosers.forEach(stock => { %>
                                    <a href="/stock/<%= stock.symbol %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong><%= stock.symbol %></strong>
                                                <div class="text-muted small"><%= stock.name %></div>
                                            </div>
                                            <div class="text-end">
                                                <div>$<%= parseFloat(stock.current_price).toFixed(2) %></div>
                                                <span class="text-danger">
                                                    <%= parseFloat(stock.change_percent).toFixed(2) %>%
                                                </span>
                                            </div>
                                        </div>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center p-4 text-muted">
                                    No losers data available
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>