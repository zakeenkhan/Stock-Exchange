<%
    // Default values with proper undefined checking using locals object
    const pageTitle = locals.title || 'Stoker - Stock Market Website';
    const showNavbar = locals.showNavbar !== undefined ? locals.showNavbar : true;
    const showHero = locals.showHero !== undefined ? locals.showHero : true;
    const activeNav = locals.activeNav || '';
    const showBackButton = locals.showBackButton || false;
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title><%= pageTitle %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;500&display=swap" rel="stylesheet">  

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    
    <!-- Custom CSS for dashboard and other pages -->
    <style>
        .header-carousel .owl-nav {
            position: absolute;
            top: 50%;
            width: 100%;
            transform: translateY(-50%);
            display: flex;
            justify-content: space-between;
            padding: 0 45px;
            z-index: 1;
        }

        .header-carousel .owl-nav .owl-prev,
        .header-carousel .owl-nav .owl-next {
            position: static;
            transform: none;
            font-size: 45px;
            color: #fff;
        }

        .header-carousel .owl-nav .owl-prev:hover,
        .header-carousel .owl-nav .owl-next:hover {
            color: var(--bs-primary);
        }
        .dashboard-sidebar {
            background-color: #f8f9fa;
            min-height: calc(100vh - 90px);
            border-right: 1px solid #dee2e6;
            padding: 20px 0;
        }
        
        .dashboard-sidebar .nav-link {
            color: #495057;
            padding: 10px 20px;
            border-radius: 0;
        }
        
        .dashboard-sidebar .nav-link:hover {
            background-color: #e9ecef;
        }
        
        .dashboard-sidebar .nav-link.active {
            background-color: #0d6efd;
            color: #fff;
        }
        
        .dashboard-sidebar .nav-link i {
            width: 24px;
            text-align: center;
            margin-right: 10px;
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            transition: all 0.3s ease;
        }
        
        .stock-card {
            transition: all 0.3s ease;
        }
        
        .stock-up {
            border-left: 5px solid var(--bs-success);
        }
        
        .stock-down {
            border-left: 5px solid var(--bs-danger);
        }

        .stock-neutral {
            border-left: 5px solid var(--bs-secondary);
        }

        .stock-card .card-title a {
            font-weight: 600;
            color: var(--bs-dark);
            text-decoration: none;
            transition: color 0.2s;
        }

        .stock-card .card-title a:hover {
            color: var(--bs-primary);
        }

        .stock-card .company-name {
            font-size: 0.85rem;
            color: var(--bs-secondary);
        }

        .stock-card .price {
            font-size: 2.25rem;
            font-weight: 700;
        }

        .stock-card .change {
            font-size: 1rem;
            font-weight: 600;
        }

        .market-list .list-group-item {
            border: 0;
            padding: 1rem 1.25rem;
            transition: background-color 0.2s;
        }

        .market-list .list-group-item:not(:last-child) {
            border-bottom: 1px solid var(--bs-gray-200);
        }

        .market-list .list-group-item:hover {
            background-color: var(--bs-light);
        }

        .market-list .stock-symbol {
            font-weight: 600;
        }

        .market-list .stock-price {
            font-weight: 500;
        }

        .gainers-list .list-group-item, .losers-list .list-group-item {
            padding: 0.75rem 1rem;
            border: 0;
        }

        .gainers-list .list-group-item:not(:last-child), .losers-list .list-group-item:not(:last-child) {
            border-bottom: 1px solid var(--bs-gray-200);
        }

        .gainers-list .badge {
            background-color: var(--bs-success) !important;
        }

        .losers-list .badge {
            background-color: var(--bs-danger) !important;
        }
        
        .alert-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            padding: 5px 8px;
            border-radius: 50%;
            background: #dc3545;
            color: white;
        }
        
        .flash-message {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            max-width: 350px;
        }
    </style>
    <!-- Add this before the closing </head> tag -->
    <script src="/js/theme.js"></script>
    <% if (locals.user && locals.settings && locals.settings.theme) { %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userTheme = '<%= settings.theme %>';
            if (userTheme === 'system') {
                // Use system preference
                if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    applyTheme('dark');
                } else {
                    applyTheme('light');
                }
            } else {
                applyTheme(userTheme);
            }
            localStorage.setItem('theme', userTheme);
        });
    </script>
    <% } %>
</head>

<body>
    <% if (showNavbar) { %>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
  
        <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
            <a href="/" class="navbar-brand ms-4 ms-lg-0">
                <h1 class="display-5 text-primary m-0">Stoker</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="/" class="nav-item nav-link <%= activeNav === 'home' ? 'active' : '' %>">Home</a>
                    <a href="/about" class="nav-item nav-link <%= activeNav === 'about' ? 'active' : '' %>">About</a>
                    <a href="/services" class="nav-item nav-link <%= activeNav === 'service' ? 'active' : '' %>">Services</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle <%= ['market-data', 'analytics', 'education'].includes(activeNav) ? 'active' : '' %>" data-bs-toggle="dropdown">Stock Market</a>
                        <div class="dropdown-menu m-0">
                            <a href="/stock/market-data" class="dropdown-item">Market Data</a>
                            <a href="/stock/analytics" class="dropdown-item">Analytics</a>
                            <a href="/stock/education" class="dropdown-item">Education</a>
                        </div>
                    </div>
                    <a href="/feature" class="nav-item nav-link <%= activeNav === 'feature' ? 'active' : '' %>">Features</a>
                    <a href="/offer" class="nav-item nav-link <%= activeNav === 'offer' ? 'active' : '' %>">Offers</a>
                    <a href="/faq" class="nav-item nav-link <%= activeNav === 'faq' ? 'active' : '' %>">FAQs</a>
                    <a href="/contact" class="nav-item nav-link <%= activeNav === 'contact' ? 'active' : '' %>">Contact</a>

                    <% if (locals.user) { %>
                        <% if (locals.user.is_admin) { %>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle <%= activeNav === 'admin' ? 'active' : '' %>" data-bs-toggle="dropdown">Admin</a>
                            <div class="dropdown-menu border-light m-0">
                                <a href="/admin/add-stock" class="dropdown-item">Add Stock</a>
                            </div>
                        </div>
                        <% } %>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle <%= activeNav === 'dashboard' ? 'active' : '' %>" data-bs-toggle="dropdown">Dashboard</a>
                            <div class="dropdown-menu border-light m-0">
                                <a href="/dashboard" class="dropdown-item">Overview</a>
                                <div class="dropdown-divider"></div>
                                <h6 class="dropdown-header">Watchlists</h6>
                                <a href="/dashboard/watchlist" class="dropdown-item d-flex justify-content-between align-items-center">
                                    <span>My Watchlists</span>
                                    <span class="badge bg-primary rounded-pill"><%= watchlists ? watchlists.length : 0 %></span>
                                </a>
                            
                                <div class="dropdown-divider"></div>
                                <a href="/user/profile" class="dropdown-item">Profile</a>
                                <a href="/auth/logout" class="dropdown-item">Logout</a>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Account</a>
                            <div class="dropdown-menu border-light m-0">
                                <a href="/auth/login" class="dropdown-item">Login</a>
                                <a href="/auth/register" class="dropdown-item">Register</a>
                            </div>
                        </div>
                    <% } %>
                    
                </div>
                

            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <% } %>
    
    <!-- Display flash messages -->
    <% if (locals.success_msg && locals.success_msg.length > 0) { %>
        <div class="flash-message alert alert-success alert-dismissible fade show" role="alert">
            <%= locals.success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if (locals.error_msg && locals.error_msg.length > 0) { %>
        <div class="flash-message alert alert-danger alert-dismissible fade show" role="alert">
            <%= locals.error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if (locals.error && locals.error.length > 0) { %>
        <div class="flash-message alert alert-danger alert-dismissible fade show" role="alert">
            <%= locals.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (showHero) { %>
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-8">
                                    <p class="d-inline-block border border-white rounded text-primary fw-semi-bold py-1 px-3 animated slideInDown">Welcome to Stoker</p>
                                    <h1 class="display-1 mb-4 animated slideInDown">Your Ultimate Investment Platform</h1>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="/img/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-7">
                                    <p class="d-inline-block border border-white rounded text-primary fw-semi-bold py-1 px-3 animated slideInDown">Welcome to Stoker</p>
                                    <h1 class="display-1 mb-4 animated slideInDown">Track, Analyze, and Grow Your Portfolio</h1>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->
    <% } else { %>
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <% if (showBackButton) { %>
                <div class="d-flex justify-content-start align-items-center mb-3">
                    <button onclick="history.back()" class="btn btn-light rounded-pill py-2 px-4 me-3 animated slideInDown">
                        <i class="fas fa-arrow-left me-2"></i> Back
                    </button>
                </div>
            <% } %>
            
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= pageTitle %></li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <% } %>