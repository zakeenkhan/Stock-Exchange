<%- include('../partials/header', { title: watchlist ? 'Edit Watchlist' : 'Create Watchlist', showHero: false, showPageHeader: false }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><%= watchlist ? 'Edit Watchlist' : 'Create New Watchlist' %></h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="<%= watchlist ? `/dashboard/watchlist/${watchlist.id}/edit` : '/dashboard/watchlist' %>">
                        <div class="mb-3">
                            <label for="name" class="form-label">Watchlist Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= watchlist ? watchlist.name : '' %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="3"><%= watchlist ? watchlist.description : '' %></textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/dashboard/watchlist" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Watchlists
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> <%= watchlist ? 'Update' : 'Create' %> Watchlist
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
