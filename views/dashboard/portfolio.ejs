<%- include('../partials/header', { title: 'My Portfolios', activeNav: 'dashboard', showHero: false }) %>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5 mb-0">My Portfolios</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPortfolioModal">
                <i class="fas fa-plus-circle me-2"></i> Create New Portfolio
            </button>
        </div>

        <% if (portfolios && portfolios.length > 0) { %>
            <div class="row g-4">
                <% portfolios.forEach(portfolio => { %>
                    <div class="col-lg-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h4 class="mb-0"><%= portfolio.name %></h4>
                                <div>
                                    <button class="btn btn-sm btn-light me-2" data-bs-toggle="modal" data-bs-target="#addHoldingModal" onclick="setPortfolioId('<%= portfolio.id %>')">
                                        <i class="fas fa-plus me-1"></i> Add Holding
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="confirmDeletePortfolio('<%= portfolio.id %>', '<%= portfolio.name %>')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-4">
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>Total Value</h5>
                                                <h3 class="text-primary">$<%= portfolio.totalValue.toFixed(2) %></h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>Total Cost</h5>
                                                <h3>$<%= portfolio.totalCost.toFixed(2) %></h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>Profit/Loss</h5>
                                                <h3 class="<%= portfolio.totalProfitLoss >= 0 ? 'text-success' : 'text-danger' %>">
                                                    $<%= portfolio.totalProfitLoss.toFixed(2) %>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>Return</h5>
                                                <h3 class="<%= portfolio.totalProfitLossPercent >= 0 ? 'text-success' : 'text-danger' %>">
                                                    <%= portfolio.totalProfitLossPercent.toFixed(2) %>%
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <% if (portfolio.holdings && portfolio.holdings.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Symbol</th>
                                                    <th>Name</th>
                                                    <th>Shares</th>
                                                    <th>Purchase Price</th>
                                                    <th>Current Price</th>
                                                    <th>Total Cost</th>
                                                    <th>Current Value</th>
                                                    <th>Profit/Loss</th>
                                                    <th>Return</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% portfolio.holdings.forEach(holding => { %>
                                                    <tr>
                                                        <td><strong><%= holding.symbol %></strong></td>
                                                        <td><%= holding.name %></td>
                                                        <td><%= holding.shares %></td>
                                                        <td>$<%= holding.purchase_price.toFixed(2) %></td>
                                                        <td>$<%= holding.current_price.toFixed(2) %></td>
                                                        <td>$<%= holding.total_cost.toFixed(2) %></td>
                                                        <td>$<%= holding.current_value.toFixed(2) %></td>
                                                        <td class="<%= holding.profit_loss >= 0 ? 'text-success' : 'text-danger' %>">
                                                            $<%= holding.profit_loss.toFixed(2) %>
                                                        </td>
                                                        <td class="<%= holding.profit_loss_percent >= 0 ? 'text-success' : 'text-danger' %>">
                                                            <%= holding.profit_loss_percent.toFixed(2) %>%
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <button class="btn btn-sm btn-outline-primary" onclick="editHolding('<%= holding.id %>', '<%= holding.symbol %>', '<%= holding.shares %>', '<%= holding.purchase_price %>', '<%= holding.purchase_date %>')">
                                                                    <i class="fas fa-edit"></i>
                                                                </button>
                                                                <button class="btn btn-sm btn-outline-danger" onclick="removeHolding('<%= holding.id %>', '<%= holding.symbol %>')">
                                                                    <i class="fas fa-times"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <p>No holdings in this portfolio yet.</p>
                                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addHoldingModal" onclick="setPortfolioId('<%= portfolio.id %>')">
                                            <i class="fas fa-plus-circle me-2"></i> Add Holdings
                                        </button>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-chart-pie fa-4x text-primary mb-4"></i>
                    <h4>No Portfolios Yet</h4>
                    <p class="mb-4">Create your first portfolio to track your investments.</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPortfolioModal">
                        <i class="fas fa-plus-circle me-2"></i> Create Portfolio
                    </button>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Create Portfolio Modal -->
<div class="modal fade" id="createPortfolioModal" tabindex="-1" aria-labelledby="createPortfolioModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createPortfolioModalLabel">Create New Portfolio</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/dashboard/portfolio" method="POST">
                    <div class="mb-3">
                        <label for="portfolioName" class="form-label">Portfolio Name</label>
                        <input type="text" class="form-control" id="portfolioName" name="name" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Create Portfolio</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Holding Modal -->
<div class="modal fade" id="addHoldingModal" tabindex="-1" aria-labelledby="addHoldingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addHoldingModalLabel">Add Holding to Portfolio</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/dashboard/portfolio/add" method="POST">
                    <input type="hidden" id="portfolioIdInput" name="portfolio_id">
                    <div class="mb-3">
                        <label for="stockSearch" class="form-label">Search for a Stock</label>
                        <input type="text" class="form-control" id="stockSearch" placeholder="Enter symbol or company name">
                    </div>
                    <div id="searchResults" class="mb-3">
                        <!-- Search results will be displayed here -->
                    </div>
                    <div class="mb-3">
                        <label for="stockSelect" class="form-label">Select Stock</label>
                        <select class="form-select" id="stockSelect" name="stock_id" required>
                            <option value="">Select a stock</option>
                            <!-- Stock options will be populated via AJAX -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="shares" class="form-label">Number of Shares</label>
                        <input type="number" class="form-control" id="shares" name="shares" step="0.01" min="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="purchasePrice" class="form-label">Purchase Price per Share ($)</label>
                        <input type="number" class="form-control" id="purchasePrice" name="purchase_price" step="0.01" min="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="purchaseDate" class="form-label">Purchase Date</label>
                        <input type="date" class="form-control" id="purchaseDate" name="purchase_date" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Add to Portfolio</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Holding Modal -->
<div class="modal fade" id="editHoldingModal" tabindex="-1" aria-labelledby="editHoldingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editHoldingModalLabel">Edit Holding</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/dashboard/portfolio/update" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <input type="hidden" id="editHoldingId" name="holding_id">
                    <div class="mb-3">
                        <label for="editSymbol" class="form-label">Stock Symbol</label>
                        <input type="text" class="form-control" id="editSymbol" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="editShares" class="form-label">Number of Shares</label>
                        <input type="number" class="form-control" id="editShares" name="shares" step="0.01" min="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="editPurchasePrice" class="form-label">Purchase Price per Share ($)</label>
                        <input type="number" class="form-control" id="editPurchasePrice" name="purchase_price" step="0.01" min="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="editPurchaseDate" class="form-label">Purchase Date</label>
                        <input type="date" class="form-control" id="editPurchaseDate" name="purchase_date" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Update Holding</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmMessage">Are you sure you want to delete this portfolio?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Set portfolio ID for adding holdings
    function setPortfolioId(id) {
        document.getElementById('portfolioIdInput').value = id;
    }
    
    // Edit holding
    function editHolding(id, symbol, shares, purchasePrice, purchaseDate) {
        document.getElementById('editHoldingId').value = id;
        document.getElementById('editSymbol').value = symbol;
        document.getElementById('editShares').value = shares;
        document.getElementById('editPurchasePrice').value = purchasePrice;
        document.getElementById('editPurchaseDate').value = purchaseDate;
        
        const editModal = new bootstrap.Modal(document.getElementById('editHoldingModal'));
        editModal.show();
    }
    
    // Remove holding
    function removeHolding(holdingId, symbol) {
        if (confirm(`Remove ${symbol} from this portfolio?`)) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/dashboard/portfolio/remove';
            
            const methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            methodInput.value = 'DELETE';
            
            const holdingInput = document.createElement('input');
            holdingInput.type = 'hidden';
            holdingInput.name = 'holding_id';
            holdingInput.value = holdingId;
            
            form.appendChild(methodInput);
            form.appendChild(holdingInput);
            
            document.body.appendChild(form);
            form.submit();
        }
    }
    
    // Confirm delete portfolio
    function confirmDeletePortfolio(id, name) {
        document.getElementById('deleteConfirmMessage').textContent = `Are you sure you want to delete the portfolio "${name}"?`;
        document.getElementById('deleteForm').action = `/dashboard/portfolio/${id}`;
        
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
        deleteModal.show();
    }
    
    // Stock search functionality
    document.getElementById('stockSearch').addEventListener('input', function() {
        const query = this.value.trim();
        
        if (query.length < 2) {
            document.getElementById('searchResults').innerHTML = '';
            return;
        }
        
        // Fetch matching stocks
        fetch(`/stock/search?q=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(data => {
                const resultsDiv = document.getElementById('searchResults');
                const selectElement = document.getElementById('stockSelect');
                
                // Clear previous results
                resultsDiv.innerHTML = '';
                selectElement.innerHTML = '<option value="">Select a stock</option>';
                
                if (data.length === 0) {
                    resultsDiv.innerHTML = '<p class="text-muted">No matching stocks found</p>';
                    return;
                }
                
                // Create result list
                const resultsList = document.createElement('ul');
                resultsList.className = 'list-group';
                
                data.forEach(stock => {
                    // Add to dropdown
                    const option = document.createElement('option');
                    option.value = stock.id;
                    option.textContent = `${stock.symbol} - ${stock.name}`;
                    selectElement.appendChild(option);
                    
                    // Add to results list
                    const listItem = document.createElement('li');
                    listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                    listItem.innerHTML = `
                        <div>
                            <strong>${stock.symbol}</strong> - ${stock.name}
                        </div>
                        <span class="badge bg-primary rounded-pill">$${stock.current_price.toFixed(2)}</span>
                    `;
                    listItem.addEventListener('click', function() {
                        selectElement.value = stock.id;
                        document.getElementById('purchasePrice').value = stock.current_price.toFixed(2);
                    });
                    resultsList.appendChild(listItem);
                });
                
                resultsDiv.appendChild(resultsList);
            })
            .catch(error => {
                console.error('Error searching stocks:', error);
                document.getElementById('searchResults').innerHTML = '<p class="text-danger">Error searching stocks</p>';
            });
    });
    
    // Set default purchase date to today
    document.addEventListener('DOMContentLoaded', function() {
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('purchaseDate').value = today;
    });
</script>

