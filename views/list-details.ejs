<%- include('partials/header', { title: list.name + ' - Watchlist', activeNav: 'dashboard' }) %>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-1"><i class="fas fa-list-ul me-2"></i><%= list.name %></h1>
                    <% if (list.description) { %>
                        <p class="text-muted mb-0"><%= list.description %></p>
                    <% } %>
                    <small class="text-muted">Created on <%= new Date(list.created_at).toLocaleDateString() %></small>
                </div>
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStockModal">
                        <i class="fas fa-plus-circle me-1"></i> Add Stocks
                    </button>
                    <a href="/dashboard" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <% if (stocks && stocks.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Company</th>
                                        <th>Price</th>
                                        <th>Change</th>
                                        <th>Market Cap</th>
                                        <th>Added On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% stocks.forEach(stock => { 
                                        const change = stock.change_value || 0;
                                        const changePercent = stock.change_percent || 0;
                                        const colorClass = change >= 0 ? 'text-success' : 'text-danger';
                                        const changeIcon = change >= 0 ? 'fa-arrow-up' : 'fa-arrow-down';
                                    %>
                                        <tr>
                                            <td><strong><a href="/stock/<%= stock.symbol %>" class="text-decoration-none"><%= stock.symbol %></a></strong></td>
                                            <td><%= stock.name %></td>
                                            <td>$<%= stock.current_price ? parseFloat(stock.current_price).toFixed(2) : 'N/A' %></td>
                                            <td class="<%= colorClass %>">
                                                <i class="fas <%= changeIcon %> me-1"></i>
                                                <%= Math.abs(change).toFixed(2) %> (<%= Math.abs(changePercent).toFixed(2) %>%)
                                            </td>
                                            <td>
                                                <% if (stock.market_cap) { %>
                                                    $<%= (stock.market_cap / 1000000000).toFixed(2) %>B
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td><%= new Date(stock.added_at).toLocaleDateString() %></td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/stock/<%= stock.symbol %>" class="btn btn-outline-primary" title="View Details">
                                                        <i class="fas fa-chart-line"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger" 
                                                            onclick="removeFromList('<%= list.id %>', '<%= stock.id %>', '<%= stock.symbol %>')"
                                                            title="Remove from list">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center p-5">
                            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                            <h4>This list is empty</h4>
                            <p class="text-muted">Add stocks to this list to start tracking them.</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStockModal">
                                <i class="fas fa-plus-circle me-1"></i> Add Your First Stock
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Stock Modal -->
<div class="modal fade" id="addStockModal" tabindex="-1" aria-labelledby="addStockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addStockModalLabel">Add Stock to <%= list.name %></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addStockForm" action="/lists/add-stock" method="POST">
                <input type="hidden" name="list_id" value="<%= list.id %>">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="stockSearch" class="form-label">Search for a stock</label>
                        <input type="text" class="form-control" id="stockSearch" placeholder="Enter stock symbol or company name">
                    </div>
                    <div id="searchResults" class="mb-3">
                        <!-- Search results will appear here -->
                    </div>
                    <div class="mb-3">
                        <label for="stockSelect" class="form-label">Select Stock</label>
                        <select class="form-select" id="stockSelect" name="stock_id" required>
                            <option value="">-- Select a stock --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add to List</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Function to handle stock search
    document.getElementById('stockSearch').addEventListener('input', function() {
        const query = this.value.trim();
        if (query.length < 2) {
            document.getElementById('searchResults').innerHTML = '';
            return;
        }

        fetch(`/api/stocks/search?q=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(data => {
                const resultsDiv = document.getElementById('searchResults');
                const selectElement = document.getElementById('stockSelect');
                
                // Clear previous results
                resultsDiv.innerHTML = '';
                selectElement.innerHTML = '<option value="">-- Select a stock --</option>';
                
                if (data.length === 0) {
                    resultsDiv.innerHTML = '<div class="alert alert-info">No matching stocks found</div>';
                    return;
                }
                
                const resultsList = document.createElement('div');
                resultsList.className = 'list-group';
                
                data.forEach(stock => {
                    // Add to dropdown
                    const option = document.createElement('option');
                    option.value = stock.id;
                    option.textContent = `${stock.symbol} - ${stock.name}`;
                    selectElement.appendChild(option);
                    
                    // Add to results list
                    const listItem = document.createElement('button');
                    listItem.type = 'button';
                    listItem.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
                    listItem.innerHTML = `
                        <div>
                            <strong>${stock.symbol}</strong> - ${stock.name}
                            <div class="text-muted small">${stock.exchange || 'N/A'}</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">$${stock.current_price ? parseFloat(stock.current_price).toFixed(2) : 'N/A'}</span>
                    `;
                    listItem.addEventListener('click', function() {
                        selectElement.value = stock.id;
                        document.getElementById('stockSearch').value = `${stock.symbol} - ${stock.name}`;
                    });
                    resultsList.appendChild(listItem);
                });
                
                resultsDiv.appendChild(resultsList);
            })
            .catch(error => {
                console.error('Error searching stocks:', error);
                document.getElementById('searchResults').innerHTML = 
                    '<div class="alert alert-danger">Error searching for stocks. Please try again.</div>';
            });
    });

    // Function to remove stock from list
    function removeFromList(listId, stockId, stockSymbol) {
        if (confirm(`Are you sure you want to remove ${stockSymbol} from this list?`)) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/lists/remove-stock';
            
            const methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            methodInput.value = 'DELETE';
            
            const listInput = document.createElement('input');
            listInput.type = 'hidden';
            listInput.name = 'list_id';
            listInput.value = listId;
            
            const stockInput = document.createElement('input');
            stockInput.type = 'hidden';
            stockInput.name = 'stock_id';
            stockInput.value = stockId;
            
            form.appendChild(methodInput);
            form.appendChild(listInput);
            form.appendChild(stockInput);
            
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

<%- include('partials/footer') %>
