<%- include('../partials/header', { page: 'stock-search' }) %>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="mb-5 text-center">
                    <h1>Stock Search</h1>
                    <p class="lead">Find stocks by company name or symbol</p>
                </div>
                
                <!-- Search Form -->
                <div class="card border-0 shadow mb-5">
                    <div class="card-body p-4">
                        <form action="/stock/search" method="GET" class="row g-3 align-items-center">
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-search"></i></span>
                                    <input type="text" class="form-control form-control-lg" id="query" name="query" placeholder="Enter company name or symbol..." value="<%= typeof query !== 'undefined' ? query : '' %>" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Search Results -->
                <% if (typeof searchPerformed !== 'undefined' && searchPerformed) { %>
                    <div class="card border-0 shadow">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">Search Results</h4>
                            <span class="badge bg-light text-dark"><%= stocks.length %> results</span>
                        </div>
                        <div class="card-body p-0">
                            <% if (stocks && stocks.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Symbol</th>
                                                <th>Company Name</th>
                                                <th>Price</th>
                                                <th>Change</th>
                                                <th>Market Cap</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% stocks.forEach(stock => { %>
                                                <% 
                                                    const change = stock.current_price - stock.previous_close;
                                                    const percentChange = (change / stock.previous_close) * 100;
                                                    const isPositive = change >= 0;
                                                    
                                                    // Format market cap in a readable format (inline)
                                                    let formattedMarketCap = '';
                                                    if (stock.market_cap >= 1000000000000) {
                                                        formattedMarketCap = (stock.market_cap / 1000000000000).toFixed(2) + 'T';
                                                    } else if (stock.market_cap >= 1000000000) {
                                                        formattedMarketCap = (stock.market_cap / 1000000000).toFixed(2) + 'B';
                                                    } else if (stock.market_cap >= 1000000) {
                                                        formattedMarketCap = (stock.market_cap / 1000000).toFixed(2) + 'M';
                                                    } else {
                                                        formattedMarketCap = stock.market_cap.toLocaleString();
                                                    }
                                                %>
                                                <tr data-symbol="<%= stock.symbol %>" class="clickable-row">
                                                    <td><strong><a href="/stock/<%= stock.symbol %>"><%= stock.symbol %></a></strong></td>
                                                    <td><%= stock.company_name %></td>
                                                    <td>$<%= parseFloat(stock.current_price).toFixed(2) %></td>
                                                    <td class="<%= isPositive ? 'text-success' : 'text-danger' %>">
                                                        <%= isPositive ? '+' : '' %><%= change.toFixed(2) %>
                                                        (<%= isPositive ? '+' : '' %><%= percentChange.toFixed(2) %>%)
                                                    </td>
                                                    <td>$<%= formattedMarketCap %></td>
                                                    <td>
                                                        <a href="/stock/<%= stock.symbol %>" class="btn btn-sm btn-outline-primary">View</a>
                                                        <% if (locals.user) { %>
                                                            <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#addToListModal" data-stock-id="<%= stock.id %>" data-stock-symbol="<%= stock.symbol %>">
                                                                <i class="fas fa-star"></i>
                                                            </button>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                    <h4>No results found</h4>
                                    <p class="text-muted">Try another search term</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Popular Stocks -->
                    <div class="card border-0 shadow">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Popular Stocks</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">AAPL</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Apple Inc.</h6>
                                            <p class="card-text fs-4">$150.23 <span class="fs-6 text-success">+2.34 (1.58%)</span></p>
                                            <a href="/stock/AAPL" class="btn btn-sm btn-outline-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">MSFT</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Microsoft Corporation</h6>
                                            <p class="card-text fs-4">$290.17 <span class="fs-6 text-success">+3.21 (1.12%)</span></p>
                                            <a href="/stock/MSFT" class="btn btn-sm btn-outline-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">GOOGL</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Alphabet Inc.</h6>
                                            <p class="card-text fs-4">$2,756.32 <span class="fs-6 text-success">+15.87 (0.58%)</span></p>
                                            <a href="/stock/GOOGL" class="btn btn-sm btn-outline-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">AMZN</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Amazon.com, Inc.</h6>
                                            <p class="card-text fs-4">$3,281.15 <span class="fs-6 text-danger">-12.45 (0.38%)</span></p>
                                            <a href="/stock/AMZN" class="btn btn-sm btn-outline-primary">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Add to Watchlist Modal (Only shown if user is logged in) -->
<% if (locals.user) { %>
    <div class="modal fade" id="addToListModal" tabindex="-1" aria-labelledby="addToListModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addToListModalLabel">Add to List</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addToListForm">
                        <input type="hidden" id="stockId" name="stock_id">
                        <div class="mb-3">
                            <label for="listSelect" class="form-label">Select List</label>
                            <select class="form-select" id="listSelect" name="list_id" required>
                                <option value="" selected disabled>Choose a list</option>
                                <% if (locals.user) { %>
                                    <!-- This would be populated from the backend -->
                                    <option value="create-new">+ Create new list</option>
                                <% } %>
                            </select>
                        </div>
                        <div id="newWatchlistNameGroup" class="mb-3 d-none">
                            <label for="newListName" class="form-label">List Name</label>
                            <input type="text" class="form-control" id="newListName" name="new_list_name">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% } %>


<style>
    .clickable-row {
        cursor: pointer;
    }
    .clickable-row:hover {
        background-color: #f8f9fa;
    }
</style>

<%- include('../partials/footer', {
    customScripts: `
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add click listener to table rows for navigation
            document.querySelectorAll('tbody tr.clickable-row').forEach(row => {
                row.addEventListener('click', function(event) {
                    // Do not navigate if a button, link, or icon inside a button was clicked
                    if (event.target.closest('a, button')) {
                        return;
                    }
                    const symbol = this.dataset.symbol;
                    if (symbol) {
                        window.location.href = '/stock/' + symbol;
                    }
                });
            });

            // Handle add to list modal
            const addToListModal = document.getElementById('addToListModal');
            
            if (addToListModal) {
                addToListModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const stockId = button.getAttribute('data-stock-id');
                    const stockSymbol = button.getAttribute('data-stock-symbol');

                    const modalTitle = addToListModal.querySelector('.modal-title');
                    modalTitle.textContent = 'Add ' + stockSymbol + ' to List';

                    const stockIdInput = addToListModal.querySelector('#stockId');
                    stockIdInput.value = stockId;

                    // Fetch user's lists
                    fetch('/user/lists')
                        .then(response => response.json())
                        .then(data => {
                            const listSelect = addToListModal.querySelector('#listSelect');
                            listSelect.innerHTML = '<option value="" selected disabled>Choose a list</option>';
                            if (data.lists && data.lists.length > 0) {
                                data.lists.forEach(list => {
                                    const option = document.createElement('option');
                                    option.value = list.id;
                                    option.textContent = list.name;
                                    listSelect.appendChild(option);
                                });
                            }
                            const createNewOption = document.createElement('option');
                            createNewOption.value = 'create-new';
                            createNewOption.textContent = '+ Create new list';
                            listSelect.appendChild(createNewOption);
                        })
                        .catch(error => console.error('Error fetching lists:', error));
                });

                const listSelect = addToListModal.querySelector('#listSelect');
                const newListNameGroup = addToListModal.querySelector('#newWatchlistNameGroup');
                const newListNameInput = addToListModal.querySelector('#newListName');

                listSelect.addEventListener('change', function() {
                    if (this.value === 'create-new') {
                        newListNameGroup.classList.remove('d-none');
                        newListNameInput.setAttribute('required', 'required');
                    } else {
                        newListNameGroup.classList.add('d-none');
                        newListNameInput.removeAttribute('required');
                    }
                });

                const addToListForm = addToListModal.querySelector('#addToListForm');
                addToListForm.addEventListener('submit', function(event) {
                    event.preventDefault();

                    const stockId = addToListForm.querySelector('#stockId').value;
                    const listId = addToListForm.querySelector('#listSelect').value;
                    const newListName = addToListForm.querySelector('#newListName').value;

                    let url = '';
                    let body = {};

                    if (listId === 'create-new') {
                        url = '/user/lists/create-and-add';
                        body = { stock_id: stockId, list_name: newListName };
                    } else {
                        url = '/user/lists/add';
                        body = { stock_id: stockId, list_id: listId };
                    }

                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(body),
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            bootstrap.Modal.getInstance(addToListModal).hide();
                            // Optionally refresh the page or update UI
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while adding to list.');
                    });
                });
            }
        });
    </script>
    `
}) %>